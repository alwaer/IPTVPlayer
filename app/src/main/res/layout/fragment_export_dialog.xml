<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/select_category"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/tabTextColor"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/fragment_export_dialog_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:listitem="@android:layout/simple_spinner_dropdown_item"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/export_to"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/tabTextColor"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/fragment_export_dialog_path_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/fragment_export_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export"
        android:textColor="?android:attr/textColor"/>
</LinearLayout>